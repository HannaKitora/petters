<%= render "admin/layouts/header" %>
<div class="container">
  <h1>Hello Admin!</h1>
  <div class="row m-5">
    
    <div class="col">
      <%= link_to 'Create Event', new_admin_event_path, class: "btn btn-warning btn-block" %>
    </div>
  </div>
  <h3>All Users</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>name</th>
        <th>E-mail</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th>
            <%= user.name %>
          </th>
          <th>
            <%= user.email %>
          </th>
          <th>
            <% if user.is_deleted == false %>
              <%= link_to 'Destroy', admin_user_path(user), method: :delete, class: 'btn btn-outline-danger', data: { confirm: 'Are you sure？' } %>
            <% else %>
            退会済
            <% end %>
          </th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>