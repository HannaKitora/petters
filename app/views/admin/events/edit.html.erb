<%= render "admin/layouts/header" %>
<div class="container">
  
  <h1>Event Edit</h1>

  <% if @event.errors.any? %>
    <%= @event.errors.count %>error prohibited this obj from being saved:
    <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row my-4">
    <%= form_with url: admin_event_path(@event.id), model: @event, method: :patch do |f| %>
      <label for="inputName">Title</label>
      <br>
      <%= f.text_field :name, autofocus: true, id:"inputName" %>
      <br>
      <label for="inputDate">Date</label>
      <br>
      <%= f.date_field :date, autofocus: true, id:"inputDate" %>
      <br>
      <label for="inputPrice">Price</label>
      <br>
      <%= f.text_field :price, autofocus: true, id:"inputPrice" %>
      <br>
      <label for="inputDetail">説明</label>
      <br>
      <%= f.text_area :detail, autofocus: true, id:"inputDetail" %>
      <br>
      <%= f.submit "Update Event", class: "btn btn-warning my-3" %>
      <br>
      
      <%= link_to "Show", admin_event_path(@event.id) %>
       | 
      <%= link_to "Back", admin_events_path %>
    <% end %>
  </div>
  
</div>