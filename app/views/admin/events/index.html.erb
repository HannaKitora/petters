<%= render "admin/layouts/header" %>
<div class="container">
  <div class="row">
    <div class="col-12">


<h1>Event</h1>
     <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col col-text-center">Image</th>
            <th scope="col">Event</th>
            <th scope="col">Date</th>
            <th scope="col">Address</th>
            <th scope="col">Price</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td scope="row">
                <%= link_to admin_event_path(event.id) do %>
                  <%= image_tag event.image, size: '100x100' %>
                <% end %>
              </td>
              <td>
                <%= event.title %>
              </td>
              <td>
                <%= event.date %>
              </td>
              <td>
                <%= event.event_address %>
              </td>
              <td>
                ï¿¥<%= event.price %>
              </td>
              <td>
                <%= link_to 'Edit', edit_admin_event_path(event.id), class: 'btn btn-outline-primary' %>
              </td>
              <td>
                <%= link_to 'Delete', admin_event_path(event.id), method: :delete, class: 'btn btn-outline-danger', data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>