<h1>Entries#confirm</h1>

  <table class="table table-bordered">
    <tr class="table-active">
      <th>イベント名</th>
      <th>単価(税込み)</th>
      <th>数量</th>
      <th>小計</th>
      <th><br></th>
    </tr>
    <tbody>
    <% entries.each do |entry| %>
      <tr>
        <td>
  　       <%= attachment_image_tag entry.item, :image, :fill, 300, 300, format: 'jpeg' %>
        　<%= entry.item.name %>
        </td>
        <td><%= entry.item.with_tax_price %></td>
        <td>
          <%= form_with model:entry, url:entry_path(entry.id) , local:true do |f| %>
        　　  <%= f.select :amount, *[1..10] %>
      　  　  <%= f.submit "変更" , class: "btn btn-success" %>
          <% end %>
        </td>
        <td><%= entry.subtotal %></td>
        <td><%= link_to "削除", destroy_entry_path(entry.id) ,  method: :delete , "data-confirm" => "商品を削除しますか？" , class: "btn btn-danger"%></td>
      </tr>
      <% @sum += entry.subtotal %>
    <% end %>
  </table>
  合計金額 <%= @sum %>

