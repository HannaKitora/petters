<h1>Entries#index</h1>
  <table class="table table-bordered">
    <tr class="table-active">
      <th>イベント名</th>
      <th>単価(税込み)</th>
      <th>数量</th>
      <th>小計</th>
      <th><br></th>
    </tr>
    <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td>
          <%= image_tag entry.event.get_image, size: '300x300' %>
        　<%= entry.event.name %>
        </td>
        <td><%= entry.event.with_tax_price %></td>
        <td>
          <%= form_with model:entry, url:entry_path(entry.id) , local:true do |f| %>
        　　  <%= f.select :amount, *[1..10] %>
      　  　  <%= f.submit "変更" , class: "btn btn-success" %>
          <% end %>
        </td>
        <td><%= entry.subtotal %></td>
        <td><%= link_to "削除", entry_path(entry.id), method: :delete , "data-confirm" => "商品を削除しますか？" , class: "btn btn-danger"%></td>
      </tr>
      <% @sum += entry.subtotal %>
    <% end %>
    </tbody>
  </table>
  合計金額 <%= @sum %>
  
  <div class="mt-4">
    <%= button_to 'Order', new_entry_path, method: :get, class: "btn btn-danger w-100" %>
  </div>