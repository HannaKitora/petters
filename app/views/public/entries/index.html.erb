<div class="container">
  <div class="row">
<h1>Entries</h1>
  <table class="table text-center">
    <tr class="table-active">
      <th>Event</th>
      <th>Price</th>
      <th>amounts</th>
      <th>Subtotal</th>
      <th><br></th>
    </tr>
    <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td>
          <!--<#%= link_to event_path(entry.event.id) do %>-->
        　   <%= entry.event.name %>
        　<!--<#% end %>-->
        </td>
        <td><%= entry.event.with_tax_price %></td>
        <td>
          <%= form_with model:entry, url:entry_path(entry.id), local:true do |f| %>
        　　  <%= f.select :amount, *[1..10] %>
      　  　  <%= f.submit "変更" , class: "btn btn-success" %>
          <% end %>
        </td>
        <td><%= entry.subtotal %></td>
        <td><%= link_to "削除", entry_path(entry.id), method: :delete , "data-confirm" => "商品を削除しますか？" , class: "btn btn-danger"%></td>
      </tr>
      <% @sum += entry.subtotal %>
    <% end %>
    </tbody>
  </table>
  合計金額 <%= @sum %>
  </div>
  </div>