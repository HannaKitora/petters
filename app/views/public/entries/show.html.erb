<div class="col-md-12 col-sm-10 mx-2 mx-sm-auto">
  <%= flash[:notice] %>
</div>
<div class="container">
  <h1>Entried Event</h1>
　 <div class="row">
　  <div class="col-md-8 offset-md-1 col-sm-10 mx-2 mx-sm-auto">
      <div class="card mx-auto my-4 shadow-lg">
        <div class="card-body m-3">
          <div class="row">
            <div class="col">
              <h3 class="card-name mx-3 mt-2"><i class="far fa-calendar-check"></i>
                <%= @event.title %>
              </h3>
              <%= image_tag @event.image, fill: [200, 200], format: 'jpeg', class: "card-img-top mx-auto p-2"; %>
              <div class="card-price ml-4 mt-4">
                <p class="card-price"><i class="fa-solid fa-coins"></i> ￥<%= @event.price %> (税抜）</p>
                
                  <!--<#%= form_with model: @entry, url: entry_path(@entry.id), local: true do |f| %>-->
                  <%= form_with model: @entry, url: new_order_path, local: true do |f| %>
                    <%= f.select :amount, *[1..10] %>
                    <%= f.submit "Edit", class: "btn btn-outline-success" %>
                    <%= link_to "Delete", entry_path(@entry.id), method: :delete , "data-confirm" => "商品を削除しますか？" , class: "btn btn-outline-danger d-grid gap-2 mx-auto" %>
                    <div class="card-subtotal ml-4 mb-2">
                      <!--合計　￥ <#%= @entry.subtotal %>-->
                      合計　￥ <%= @entry.tax_included_price %>
                    </div>
                    <%= f.hidden_field :entry_id, value: @entry.id %>
                    <%= f.hidden_field :subtotal, value: @entry.subtotal %>
                    <%= f.submit "情報入力へ進む", class: "btn btn-warning d-grid gap-2 col-6 mx-auto" %>
                  <% end %>
                <!--<#%= link_to "情報入力に進む", new_order_path, class: "btn btn-warning" %>-->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

