<h1>Events</h1>

     <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th scope="col">Event</th>
            <th scope="col">Price</th>
            <th scope="col">Detail</th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <th scope="row">
                <%= link_to event_path(event.id) do %>
                  <%= image_tag event.get_image %>
                <% end %>
              </th>
              <td>
                <%= event.name %>
              </td>
              <td>
                <%= event.price %>
              </td>
              <td>
                <%= event.detail %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  