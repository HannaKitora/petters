<% if user_signed_in? && pet.favorited_by?(current_user) %>
  <p>
    <%= link_to pet_favorite_path(pet), method: :delete, remote: true do %>
      ♥<%= pet.favorites.count %> いいね
    <% end %>
  </p>
<% elsif user_signed_in? %>
  <p>
    <%= link_to pet_favorite_path(pet), method: :post, remote: true do %>
      ♡<%= pet.favorites.count %> いいね
    <% end %>
  </p>
<% end %>