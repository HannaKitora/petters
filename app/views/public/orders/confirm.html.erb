<div class ="contianer md-mx-10 sm-mx-auto">
  <h2>Ordered Confirm</h2>
  <div class="row">c
    <div class="col-md-6 offset-md-1 col-sm-10 mx-2 mx-sm-auto mb-5">
      <table class="table">
        <tr>
          <td>イベント</td>
          <td>単価</td>
          <td>枚数</td>
          <td>小計</td>
        </tr>
        
        <tr>
          <td>
            <%= image_tag @entry.event.get_image(100, 100), class: "img mx-auto"; %>
            <%= @entry.event.title %>
          </td>
          <td><%= @entry.event.with_tax_price %></td>
          <td><%= @entry.amount %></td>
          <td><%= @entry.subtotal %></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-6 offset-md-1 col-sm-10 mx-2 mx-sm-auto">
      <table class="table">
        <tr>
          <td>請求金額</td>
          <td><%= @entry.subtotal %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-1 col-sm-10 mx-2 mx-sm-auto">
      <table class="table">
        <tr>
          <td>支払方法</td>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @order.address %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @order.username %></td>
        </tr>
        
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-1 col-sm-10 mx-2 mx-sm-auto mb-5">

      <%= form_with model: @order_new , url: "/orders" , local:true do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :payment_method, value:  @order.payment_method %>
        <%= f.hidden_field :postal_code, value: @order.postal_code %>
        <%= f.hidden_field :amount, value: @entry.amount %>
        <!--<#%= f.hidden_field :subtotal, value: @entry.subtotal %>-->
        <%= f.hidden_field :address, value: @order.address %>
        <%= f.hidden_field :username, value: @order.username %>
        <%= f.hidden_field :status, value: "wait_payment" %>
        <%= f.submit "注文を確定する", class: "btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>
