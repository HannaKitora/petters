<div class="container">
  <div class="row">
    <h1>Ordered Events</h1>

    <table class="table border text-center">
      <tr class="table-active">
        
        <th>Event</th>
        <th>Date</th>
        <th>Price</th>
        <th>amounts</th>
        <th>Subtotal</th>
      </tr>
      <tbody>
        <% if @order_details.present? %>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td>
                <%= link_to event_path(order.events) do %>
                  <%= order_detail.event.title %>
                <% end %>
              </td>
              <td><%= order_detail.events.date %></td>
              <td><%= order_detail.events.with_tax_price %></td>
              <td><%= order.amount %></td>
              <td><%= order.subtotal %></td>
            </tr>
            <!--<#% @sum += event.entry.subtotal %>-->
          <% end %>
        <% else %>
          <tr>
            <td colspan="5">No order details found.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>




