<div class="col-md-12 col-sm-10 mx-2 mx-sm-auto">
  <%= flash[:notice] %>
</div>
<div class="container">
  <h1>Ordered</h1>
　 <div class="row">
　  <div class="col-md-8 offset-md-1 col-sm-10 mx-2 mx-sm-auto">
      <div class="card mx-auto my-4 shadow-lg">
        <div class="card-body m-3">
          <div class="row">
            <div class="col">
              <%= link_to event_path(order.events) do %>
                <i class="far fa-calendar-check"></i>
                <%= @order_details.event.title %>
              <% end %>
              <%= image_tag @order_details.event.image, fill: [200, 200], format: 'jpeg', class: "card-img-top mx-auto p-2"; %>
              <div class="card-price ml-4 mt-4"><i class="fa-solid fa-coins"></i>
                ￥ <%= @order_details.event.with_tax_price %>
              </div>
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>