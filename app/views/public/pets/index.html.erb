<h1>Pets</h1>
<div class="card-list-container py-5">
  <% if user_signed_in? %>
      <% @pets.each do |pet| %>
        <div class="card w-50 mx-auto mt-4 shadow-lg">
          
                <%= link_to pet_path(pet.id) do %>
                  <%= image_tag pet.get_image, class: "card-img-top"; %>
                <% end %>
          <div class="col-10">
                <p class="card-name"><%= pet.name %></P>
                <p class="card-text"><%= pet.kind %></P>
                <p class="card-text"><%= pet.caption %></P>
                <div class="card-body">
               <div class="row">
              <div class="col-2">
                <% if pet.user.present? %>
                  <%= link_to user_path(pet.user.id) do%>
                    <%= image_tag pet.user.get_profile_image, size: '50x50', class: "mt-3 rounded-circle"; %>
                  <% end %>
                  <%= link_to user_path(pet.user.id) do%>
                    <%= pet.user.name %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        </div>
      <% end %>

  <% else %>
      <% @pets.each do |pet| %>
        <div class="card w-50 mx-auto mt-4 shadow-lg">
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                <%= link_to pet_path(pet.id) do %>
                  <%= image_tag pet.get_image, size: '500x500' %>
                <% end %>
                <%= pet.name %>
                <%= pet.kind %>
                <%= pet.caption %>
                <%= link_to "#{pet.comments.count} Comment", pet_path(pet.id) %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  <% end %>
</div>
<%= paginate @pets %>