<div class="container py-5">
  <div class="mx-auto mt-4 card w-50 mx-auto mt-4 shadow-lg">
    <h1>Post</h1>

    <%= form_with model: @pet do |f| %>
      <div class="body ">
        <div class="row">
          <div class="col">
            <div class="field">
              <h4>image</h4>
              <%= f.file_field :image, accept: "image/*" %>
            </div>
            <div class="field">
              <h4>pet's name</h4>
              <%= f.text_field :name %>
            </div>
            <div class="field">
              <h4>kind</h4>
              <%= f.text_field :kind %>
            </div>
            <div class="field">
              <h4>caption</h4>
              <%= f.text_area :caption %>
            </div>
          </div>
        </div>
      </div>
      <%= f.submit '投稿' %>
    <% end %>
  </div>
</div>