<div class="col-md-10 col-sm-10 mx-2 mx-sm-auto">
  <table class='table'>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th>followings</th>
        <th>followers</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
  <tbody>
    <% users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(50,50) %></td>
      <td><%= link_to user.name, user_path(user.id) %></td>
      <td><%= user.followings.count %></td>
      <td><%= user.followers.count %></td>
      <td>
        <% if current_user != user %>
          <% if current_user.following?(user) %>
            <%= link_to "unfollow", user_relationships_path(user.id), method: :delete %>
          <% else %>
            <%= link_to "follow", user_relationships_path(user.id), method: :post %>
          <% end %>
        <% end %>
      </td>
      <td>
        <%= link_to 'Show', user, class: "user #{user.id}" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>