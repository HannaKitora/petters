<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-7 col-sm-10 mx-2 mx-sm-auto px-0 my-5">
      <h5 class="text-dark p-4 mb-0">User info</h5>
      <div class="form-body p-4">
        <%= form_with model: @user do |f| %>
          <label for="inputName">Name</label>
          <%= f.text_field :name, class: "form-control", autofocus: true, id:"inputName"%>
          <br>
          <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*", class: "w-100" %>
          <br>
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_field :introduction, class: "form-control", autofocus: true, id:"inputIntroduction" %>
          <br>
          <%= f.submit "Update User", class: "btn btn-secondary mt-4" %>
        <% end %>
        
        <div class="unsubscribe">
          <%= link_to '退会', unsubscribe_path(@user.id) %>
        </div>
      </div>
    </div>
  </div>
</div>