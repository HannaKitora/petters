<h2>User</h2>

<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image %>
  <% if @user == current_user %>
    <p><%= link_to "edit profile", edit_user_path(@user) %></p>
  <% end %>
</div>

      
        
          <div>
              <% @pets.each do |pet| %>

                  <div class="row">
                    <%= link_to pet_path(pet.id) do %>
                      <%= image_tag pet.get_image %>
                    <% end %>
                  </div>
                  <div>
                    <%= link_to pet.name, pet_path(pet.id) %>
                    <%= pet.kind %>
                    <%= pet.caption %>
                  </div>
                  <div>
                    <%= link_to "#{pet.comments.count} Comment", pet_path(pet.id) %>
                  </div>

              <% end %>
          </div>