<div class="container">
  <div class="row p-5">
    <%= render "searches/form" %>
  </div>
  <div class="row card-eq-height">
    <%= render 'layouts/list', user: @user %>
    <div class="col-md-10 offset-md-1 col-sm-10 mx-2 mx-sm-auto">
      <% @pets.each do |pet| %>
        <div class="card mx-auto my-4 shadow-lg">
          <div class="row">
            <%= link_to pet_path(pet.id) do %>
              <%= image_tag pet.get_image(300,300), class: "card-img-top mx-auto py-2 px-4"; %>
            <% end %>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col">
                <div class="mb-2">
                  <%= link_to user_path(pet.user) do%>
                    <%= image_tag pet.user.get_profile_image(30,30), class: "rounded-circle"; %>
                  <% end %>
                  <%= link_to user_path(pet.user) do%>
                    <%= pet.user.name %>
                  <% end %>
                </div>
                      
                <p class="card-name">
                  <i class="fas fa-paw"></i> <%= link_to pet.name, pet_path(pet.id) %>
                </p>
                <p class="card-text">
                  <i class="fas fa-tablet-android"></i> <%= pet.kind %>
                </p>
                <p class="card-text">
                  <%= pet.caption %>
                </p>
                <div class="favorite" id = "favorite_<%= pet.id %>">
                  <%= render 'public/favorites/favorite', pet: pet %>
                </div>
                <span>
                  <i class="fa-regular fa-comment"></i> <%= link_to "#{pet.comments.count} Comment", pet_path(pet.id), class: "text-dark" %>
                </span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>