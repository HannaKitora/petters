     <h2>Users</h2>
        <div class="col-lg">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">image</th>
                <th scope="col">name</th>
                <th scope="col">join</th>
                <th scope="col">detail</th>
              </tr>
            </thead>

            <% @users.each do |user| %>
              <tbody>
                <tr>
                  <th scope="col">
                    <%= image_tag user.get_profile_image(70,70) %>
                  </th>
                  <th scope="col">
                    <%= user.name %>
                  </th>
                  <th scope="col">
                    <%= link_to "Show", user_path(user.id) %>
                  </th>
                </tr>
              </tbody>
            <% end %>
          </table>
        </div>